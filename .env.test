# Test Environment Configuration for GremlinsAI Backend
# This file contains environment variables specifically for testing

# Core Application Settings
LOG_LEVEL=DEBUG
DATABASE_URL=sqlite:///./data/test_gremlinsai.db
TESTING=true

# Mock API Keys for Testing (these are fake keys for testing purposes)
OPENAI_API_KEY=test-openai-key-mock-12345
ANTHROPIC_API_KEY=test-anthropic-key-mock-12345

# Test Database Configuration
TEST_DATABASE_URL=sqlite:///./data/test_gremlinsai.db

# Qdrant Test Configuration (use in-memory or test instance)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=test_gremlinsai_collection
QDRANT_USE_MEMORY=true

# Redis Test Configuration
REDIS_URL=redis://localhost:6379/1

# Disable external services for testing
DISABLE_EXTERNAL_APIS=true
MOCK_LLM_RESPONSES=true
MOCK_SEARCH_RESULTS=true
MOCK_VECTOR_STORE=true

# Test-specific settings
TEST_TIMEOUT=30
TEST_BATCH_SIZE=10
TEST_MAX_RETRIES=3

# Multi-modal test settings
MULTIMODAL_STORAGE_PATH=./data/test_multimodal
ENABLE_MULTIMODAL_PROCESSING=false

# Performance test settings
PERFORMANCE_TEST_DURATION=10
PERFORMANCE_TEST_USERS=5
PERFORMANCE_TEST_RAMP_UP=2

# Security test settings
ENABLE_SECURITY_TESTS=true
TEST_MALICIOUS_PAYLOADS=true

# Agent test settings
AGENT_RESPONSE_TIMEOUT=10
MULTI_AGENT_TIMEOUT=30
MOCK_AGENT_RESPONSES=true

# WebSocket test settings
WEBSOCKET_TEST_TIMEOUT=5
WEBSOCKET_MAX_CONNECTIONS=10
