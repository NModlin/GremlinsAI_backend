# .env.example
# This file contains all the environment variables needed for the application.
# Copy this file to .env and fill in the appropriate values.

# -- Core Application Settings --
LOG_LEVEL="INFO"
DATABASE_URL="sqlite:///./data/gremlinsai.db"

# -- OAuth2 Authentication Configuration --
# Google OAuth2 (required for production)
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# JWT Configuration
JWT_SECRET_KEY="your-super-secret-jwt-key-change-this-in-production"
JWT_ALGORITHM="HS256"
JWT_EXPIRATION_HOURS="24"

# -- Local LLM Configuration --
# Ollama Configuration (recommended for local LLMs)
OLLAMA_BASE_URL="http://localhost:11434"
OLLAMA_MODEL="llama3.2:3b"

# Hugging Face Configuration (alternative local option)
USE_HUGGINGFACE="false"
HF_MODEL="microsoft/DialoGPT-medium"

# LlamaCpp Configuration (for GGUF models)
LLAMACPP_MODEL_PATH="./models/llama-2-7b-chat.gguf"

# General LLM Settings
LLM_TEMPERATURE="0.1"
LLM_MAX_TOKENS="2048"

# -- External API Keys (optional) --
# OpenAI (only if you want to use cloud models)
# OPENAI_API_KEY="your-openai-api-key"
# OPENAI_MODEL="gpt-3.5-turbo"

# -- Weaviate Vector Database Configuration --
WEAVIATE_URL="http://localhost:8080"
# WEAVIATE_API_KEY="your-weaviate-api-key"  # Optional for local instances
WEAVIATE_CLASS_NAME="GremlinsDocument"
EMBEDDING_MODEL="all-MiniLM-L6-v2"
USE_CLIP="true"  # Enable multimodal CLIP embeddings

# -- Phase 4+ Technology Configurations --
MINIO_ENDPOINT="localhost:9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
KAFKA_BROKER_URLS="localhost:9092"
REDIS_URL="redis://localhost:6379"
