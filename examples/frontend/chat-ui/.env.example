# GremlinsAI Backend Configuration
REACT_APP_API_BASE_URL=http://localhost:8000/api/v1
REACT_APP_WS_BASE_URL=ws://localhost:8000/api/v1/ws

# Authentication
REACT_APP_API_KEY=your_api_key_here

# Optional: User Configuration
REACT_APP_DEFAULT_USER_ID=default-user

# Optional: Feature Flags
REACT_APP_ENABLE_WEBSOCKETS=true
REACT_APP_ENABLE_MULTI_AGENT=true
REACT_APP_ENABLE_VOICE_INPUT=false

# Optional: UI Configuration
REACT_APP_MAX_MESSAGE_LENGTH=4000
REACT_APP_MESSAGES_PER_PAGE=50
REACT_APP_AUTO_SCROLL_THRESHOLD=100

# Optional: Performance Settings
REACT_APP_DEBOUNCE_DELAY=300
REACT_APP_VIRTUAL_SCROLL_THRESHOLD=100
REACT_APP_CACHE_TTL=300000

# Optional: Development Settings
REACT_APP_DEBUG_MODE=false
REACT_APP_MOCK_API=false

# Optional: Security Settings
REACT_APP_REQUEST_TIMEOUT=30000
REACT_APP_ENABLE_INPUT_SANITIZATION=true

# Optional: Error Handling
REACT_APP_ENABLE_ERROR_REPORTING=false
REACT_APP_ERROR_REPORTING_URL=
